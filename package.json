{
    "name": "esmx",
    "template": "monorepo",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "prepare": "node ./prepare.mjs",
        "lint:js": "biome check --write --no-errors-on-unmatched",
        "lint:css": "FORCE_COLOR=1 pnpm --filter \"*\" lint:css",
        "lint:type": "FORCE_COLOR=1 pnpm --filter \"*\" lint:type",
        "test": "FORCE_COLOR=1 pnpm --filter \"*\" test",
        "build": "node ./build.mjs",
        "build:packages": "FORCE_COLOR=1 pnpm --filter \"./packages/**\" build",
        "build:examples": "pnpm --filter \"./examples/**\" build",
        "release": "pnpm run build:packages && lerna publish --force-publish --exact"
    },
    "devDependencies": {
        "lint-staged": "16.2.6",
        "husky": "9.1.7",
        "@biomejs/biome": "2.3.7"
    },
    "private": false,
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "engines": {
        "lerna": ">=8",
        "node": ">=24",
        "pnpm": ">=10"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "@gez/router-vue",
            "esbuild"
        ],
        "ignoredBuiltDependencies": [
            "core-js",
            "swiper",
            "puppeteer",
            "protobufjs"
        ]
    }
}
