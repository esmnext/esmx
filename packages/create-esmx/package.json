{
    "name": "create-esmx",
    "version": "3.0.0-rc.36",
    "description": "A scaffold tool for creating Esmx projects",
    "type": "module",
    "private": false,
    "bin": {
        "create-esmx": "./dist/create.mjs"
    },
    "template": "library-node",
    "scripts": {
        "lint:css": "stylelint '**/*.{css,vue}' --fix --aei",
        "lint:type": "tsc --noEmit",
        "test": "vitest run --pass-with-no-tests",
        "coverage": "vitest run --coverage --pass-with-no-tests",
        "lint:js": "biome check --write --no-errors-on-unmatched",
        "build": "unbuild"
    },
    "dependencies": {
        "@clack/prompts": "^0.7.0",
        "minimist": "^1.2.8",
        "picocolors": "^1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@esmx/lint": "workspace:*",
        "@types/minimist": "^1.2.5",
        "@types/node": "^24.0.0",
        "@vitest/coverage-v8": "3.2.4",
        "stylelint": "16.21.0",
        "typescript": "5.8.3",
        "unbuild": "3.5.0",
        "vitest": "3.2.4"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "module": "dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "lib",
        "src",
        "dist",
        "*.mjs",
        "template",
        "public",
        "bin"
    ],
    "keywords": [
        "esmx",
        "scaffold",
        "template",
        "vue",
        "ssr",
        "esm"
    ],
    "author": "Esmx Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/esmnext/esmx.git",
        "directory": "packages/create-esmx"
    },
    "bugs": {
        "url": "https://github.com/esmnext/esmx/issues"
    },
    "homepage": "https://github.com/esmnext/esmx#readme"
}
