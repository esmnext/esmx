    "devDependencies": {
        "tsc-alias": "^1.8.16",
        "@esmx/rspack-vue": "{{esmxVersion}}",
        "@types/node": "^24.0.0",
        "vue": "2.7.16",
        "typescript": "5.8.3",
        "vue-tsc": "^3.0.1"
    }
} 