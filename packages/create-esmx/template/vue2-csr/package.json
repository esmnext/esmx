{
    "name": "{{projectName}}",
    "version": "1.0.0",
    "description": "Vue2 with Server-Side Rendering",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "esmx dev",
        "build": "esmx build",
        "preview": "esmx preview",
